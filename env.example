# ============================================
# SISCR - Variáveis de Ambiente
# ============================================
# Copie este arquivo para .env e configure os valores apropriados
# cp env.example .env
# ou no Windows: copy env.example .env

# ============================================
# AMBIENTE
# ============================================
# Opções: development, homologation, preprod, production
ENVIRONMENT=development

# ============================================
# DATABASE
# ============================================
DB_NAME=siscr_db
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=db
DB_PORT=5432

# ============================================
# DJANGO
# ============================================
# IMPORTANTE: Altere esta chave em produção!
# Gere uma nova chave com: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=django-insecure-change-this-in-production

# Debug mode (True/False)
# Em produção, sempre deve ser False
DEBUG=True

# Hosts permitidos (separados por vírgula)
# Em produção, configure com os domínios reais
ALLOWED_HOSTS=localhost,127.0.0.1,teste-tenant.localhost,comercio_simples.localhost

# ============================================
# REDIS
# ============================================
REDIS_URL=redis://127.0.0.1:6379/1

# ============================================
# CELERY
# ============================================
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ============================================
# STRIPE (Pagamentos)
# ============================================
# Modo: test (sandbox) ou live (produção)
STRIPE_MODE=test

# Chaves de teste (sandbox)
# Obtenha em: https://dashboard.stripe.com/test/apikeys
STRIPE_SECRET_KEY_TEST=sk_test_...
STRIPE_PUBLISHABLE_KEY_TEST=pk_test_...
STRIPE_WEBHOOK_SECRET_TEST=whsec_...

# Chaves de produção (apenas em produção)
# Obtenha em: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=

# ============================================
# EMAIL
# ============================================
# Backend: console (desenvolvimento) ou smtp (produção)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# Configurações SMTP (para produção)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=SISCR <noreply@siscr.com.br>

# ============================================
# FRONTEND
# ============================================
# URL do frontend para links em emails
FRONTEND_URL=http://localhost:5173

# ============================================
# SENTRY (Monitoramento - Opcional)
# ============================================
# Configure apenas se quiser usar Sentry para monitoramento de erros
# Obtenha o DSN em: https://sentry.io/
SENTRY_DSN=

# Taxa de amostragem de transações (0.0 a 1.0)
SENTRY_TRACES_SAMPLE_RATE=0.1

# Taxa de amostragem de profiling (apenas produção)
SENTRY_PROFILES_SAMPLE_RATE=0.0

# Versão da release
SENTRY_RELEASE=1.0.0

# Enviar informações pessoais (True/False)
SENTRY_SEND_PII=False

# ============================================
# BACKUP (Opcional)
# ============================================
# Configurações para backup em S3 (AWS)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_STORAGE_BUCKET_NAME=
# AWS_S3_REGION_NAME=us-east-1

